<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss}[%thread]%-5level %logger{36} - %.-2048msg%n"/>
        </Console>
        <Kafka name="Kafka" topic="input-logs" syncSend="false">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5level [${spring:spring.application.name}/%c{1}#%M/%L/%X{traceId}/%X{spanId}]: %msg"/>
            <Property name="bootstrap.servers">localhost:9091</Property>
        </Kafka>
    </Appenders>
    <Loggers>
        <Logger name="org.apache.kafka" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="Kafka"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>